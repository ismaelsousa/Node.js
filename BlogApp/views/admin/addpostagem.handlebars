{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}



<div class="card">
    <div class="card-body">
        <h4>Nova mensagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Nome:</label>
            <input type="text" name="titulo" class="form-control" required>

            <label for="descricao">Descrição do problema:</label>
            <input type="text" name="descricao" class="form-control" required>       

            <label for="email">Email:</label>
            <input type="text" name="email" class="form-control" required>  

            
            <label for="telefone">Telefone:</label>
            <input type="text" name="telefone" class="form-control" required>   


            <label for="categoria">Marcas:</label>
            <select name="categoria" class="custom-select" required>
                 {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                 {{else}}
                    <option value="0">Nenhuma marca registrada</option>
                 {{/each}}
            </select>

            <button class="btn btn-success mt-2" type="submit">Enviar mensagem</button>
        </form>
    </div>
</div>