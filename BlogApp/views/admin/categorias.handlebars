        <div class="card-body">
            <h4>{{nome}}</h4>
            <a href="/admin/categorias/edit/{{_id}}">
                <button class="btn btn-success mt-2">Editar</button>
            </a>
            
        </div>
    </div>
{{else}}

{{/each}}